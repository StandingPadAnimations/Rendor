CXX       := g++
CXX_FLAGS := -std=c++17 -Wall -Wfatal-errors 

BIN     := bin
SRC     := src/RendorInterpreter
INCLUDE := include

LIBRARIES   := 
EXECUTABLE  := RendorInterpreter/rendor


all: $(BIN)/$(EXECUTABLE)

run: clean all
	clear
	./$(BIN)/$(EXECUTABLE)

$(BIN)/$(EXECUTABLE): $(SRC)/*.cpp
	$(CXX) $(CXX_FLAGS) -I$(INCLUDE) $^ -o $@ 

clean:
	-rm $(BIN)/*